          color: #fff;
          padding: 1.5em 2em;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
          position: sticky;
          top: 0;
          z-index: 1000;
      }

      header h1 {
          margin: 0;
          font-size: 2.4em;
          letter-spacing: 1px;
      }

      .container {
          padding: 2em;
      }

      section {
          margin-bottom: 2em;
          background: #fff;
          border-radius: 12px;
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
          padding: 2em;
      }

      h2 {
          color: #00278C;
          font-size: 2em;
          margin-bottom: 1em;
          position: relative;
      }

      h2::after {
          content: '';
          display: block;
          width: 50px;
          height: 5px;
          background: #00278C;
          position: absolute;
          bottom: -10px;
          left: 0;
      }

      .card-types {
          display: flex;
          flex-wrap: wrap;
          gap: 1em;
          justify-content: center;
      }

      .card-type {
          flex: 1 1 calc(33.333% - 1em); /* For three cards in the first row */
          background: #f9f9f9;
          border-radius: 8px;
          padding: 1.5em;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
          transition: box-shadow 0.3s;
          box-sizing: border-box;
      }

      .card-type:nth-child(4), .card-type:nth-child(5) {
          flex: 1 1 calc(50% - 1em); /* For two centered cards in the second row */
      }

      .card-type:hover {
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      }

      .card-type h3 {
          margin-top: 0;
          color: #00278C;
      }

      .faq-section {
          display: flex;
          flex-direction: column;
          gap: 1em;
      }

      .faq-item {
          background: #f9f9f9;
          border-radius: 8px;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
          overflow: hidden;
          transition: box-shadow 0.3s;
      }

      .faq-item:hover {
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      }

      .faq-question {
          display: flex;
          align-items: center;
          justify-content: space-between;
          padding: 1em;
          cursor: pointer;
          position: relative;
          background: #fff;
          font-weight: bold;
      }

      .faq-question::after {
          content: '\002B'; /* Unicode for plus sign */
          font-size: 1.5em;
          color: #00278C;
          margin-left: 1em;
          transition: transform 0.3s;
      }

      .faq-question.active::after {
          content: '\2212'; /* Unicode for minus sign */
          color: #00278C;
      }

      .faq-answer {
          display: none;
          padding: 1em;
          background: #f4f4f4;
      }

      .faq-answer.show {
          display: block;
      }

      /* Media Queries for Responsiveness */
      @media (max-width: 1200px) {
          .card-type {
              flex: 1 1 calc(50% - 1em); /* Two cards per row */
          }

          .card-type:nth-child(4), .card-type:nth-child(5) {
              flex: 1 1 calc(100% - 1em); /* Full-width for the last two cards */
          }
      }

      @media (max-width: 768px) {
          header h1 {
              font-size: 1.8em;
          }

          section {
              padding: 1.5em;
          }

          .container {
              padding: 1.5em;
          }

          .card-type {
              flex: 1 1 calc(100% - 1em); /* Full-width cards */
          }

          h2 {
              font-size: 1.6em;
          }

      }

      @media (max-width: 480px) {
          header h1 {
              font-size: 1.5em;
          }

          .faq-question {
              font-size: 1.2em;
          }

          .faq-answer {
              font-size: 0.9em;
          }

          h2 {
              font-size: 1.4em;
          }
      }
